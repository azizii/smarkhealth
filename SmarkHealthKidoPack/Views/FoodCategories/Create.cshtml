@model SmarkHealthKidoPack.ViewModel.FoodCategoryViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayOut.cshtml";
}


<hr />
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Create Categories</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-controller="FoodCategories" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.HiddenFor(m => m.Referer)
                        <div class="form-group">
                            <label asp-for="foodCategory.FoodCategoryName" class="control-label"></label>
                            <input asp-for="foodCategory.FoodCategoryName" class="form-control" />
                            <span asp-validation-for="foodCategory.FoodCategoryName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
