@model IEnumerable<SmarkHealthKidoPack.ViewModel.GuardainSeeChildselectedFood>

@{
    ViewData["Title"] = "purchasedfood";
    Layout = "~/Views/Shared/GuardianLayout.cshtml";
}

<h1>Child selected foods</h1>


<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    
                                    <th>Food</th>
                                    <th>price</th>
                                    <th>Date</th>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    var photoPath = "~/Images/" + (item.foods.photopath ?? "noimage.jpg");
                                    <tr>
                                        
                                        <td>@item.foods.FoodName</td>
                                        <td>@item.foods.Price</td>
                                        <td>@item.selecteddate</td>
                                        <td><img class="round-img rounded-circle" style="width:4em; height:4em;" src="@photoPath" asp-append-version="true" alt="@photoPath" /> </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div><!-- .content -->
