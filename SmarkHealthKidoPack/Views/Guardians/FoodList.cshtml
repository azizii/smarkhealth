@model IEnumerable<SmarkHealthKidoPack.Models.Food>
@{
    Layout = "~/Views/Shared/GuardianLayout.cshtml";
}

@{ TempData.Keep("balance");}
@{ TempData.Keep("ChildId");}

<div class="container">


    Total Balance Rs:  @ViewBag.tbalance


    @if (ViewBag.cart != null)
    {


        <div class="modal-body">
            <p>
                <table cellpadding="2" cellspacing="2" border="1">
                    <tr>

                        @*<th>Id</th>*@
                        <th>Name</th>
                        @*<th>Photo</th>*@
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Sub Total</th>
                        <th>Option</th>

                    </tr>
                    @foreach (var item in ViewBag.cart)
                    {
                        <tr>

                            <td>@item.food.FoodName</td>


                            <td>@item.food.Price</td>
                            <td>@item.quantity</td>
                            <td>@(item.food.Price * item.quantity)</td>
                            <td><a asp-action="Remove" asp-route-id="@item.food.FoodId">Remove</a></td>



                        </tr>
                    }
                    <tr>
                        <td align="right" colspan="6">Sum</td>
                        <td>
                            @ViewBag.total
                        </td>
                    </tr>
                </table>
            </p>
        </div>


        <button type="button" class="btn btn-secondary" data-dismiss="modal"> <a asp-action="Save" asp-route-id="@ViewBag.childid"> Save</a></button>
        @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <a asp-action="Save">add</a>*@








    }




    







    <div class="align-content-center text-center">

        <h2 class="text-center">@ViewBag.chid</h2>
    </div>


    @foreach (var item in Model)
    {

        var photoPath = "~/Images/" + (item.photopath ?? "noimage.jpg");

        <div class="card rounded-circle" style="width: 20rem; height:27rem; text-align:center;display:inline-block;">


            <div class="card-block text-center ">
                <h3 class="card-title bg-warning ">@item.foodCategory.FoodCategoryName</h3>
                <img class="card-img-top " title="Click to View Product detail"
                     style="cursor:pointer;height:200px;width:100%"
                     src="@photoPath" asp-append-version="true" style="border-radius:.60rem;" />
                <h2 class="card-title">@item.FoodName</h2>
                <p class="card-text">Pricee: @item.Price</p>



                @*//class="ti-pencil-alt"*@

                <a asp-action="AddToCart" asp-route-id="@item.FoodId">add</a> |
                <a class="ti-layout-grid4" asp-action="Details" asp-route-id="@item.FoodId"></a> |
                <a class="ti-close" asp-action="Showcart">show shopping cart</a>
            </div>

        </div>
    }






</div>

        </div>






    </div>