@model SmarkHealthKidoPack.ViewModel.WelcomeViewModel
@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/AdminLayOut.cshtml";
}









<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">
        <!-- Widgets  -->
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-widget-five">
                            <div class="stat-icon dib flat-color-1">
                                <i class="pe-7s-users"></i>
                            </div>
                            <div class="stat-content">
                                <div class="text-left dib">
                                    <div class="stat-text">$<span @*class="count" *@> @Model.CustomersCount</span></div>
                                    <div class="stat-heading">Customers</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-widget-five">
                            <div class="stat-icon dib flat-color-2">
                                <i class="pe-7s-print"></i>
                            </div>
                            <div class="stat-content">
                                <div class="text-left dib">
                                    <div class="stat-text"><span @*class="count" *@>@Model.categoryCount</span></div>
                                    <div class="stat-heading">Catagories</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-widget-five">
                            <div class="stat-icon dib flat-color-3">
                                <i class="pe-7s-coffee"></i>
                            </div>
                            <div class="stat-content">
                                <div class="text-left dib">
                                    <div class="stat-text"><span @*class="count" *@>@Model.FoodCount</span></div>
                                    <div class="stat-heading">Total foods</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-widget-five">
                            <div class="stat-icon dib flat-color-4">
                                <i class="pe-7s-users"></i>
                            </div>
                            <div class="stat-content">
                                <div class="text-left dib">
                                    <div class="stat-text"><span @*class="count*@">@Model.adminCount</span></div>
                                    <div class="stat-heading">Admins</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Widgets -->
        <!--  Traffic  -->

    </div>
</div>
<!-------------------------------------->








<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Food</th>
                                    <th>price</th>
                                    <th>Calories</th>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.food)
                                {
                                    var photoPath = "~/Images/" + (item.photopath ?? "noimage.jpg");
                                    <tr>
                                        <td>@item.foodCategory.FoodCategoryName</td>
                                        <td>@item.FoodName</td>
                                        <td>@item.Price</td>
                                        <td>@item.foodCalories</td>
                                        <td><img class="round-img rounded-circle" style="width:4em; height:4em;" src="@photoPath" asp-append-version="true" alt="@photoPath" /> </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div><!-- .content -->
