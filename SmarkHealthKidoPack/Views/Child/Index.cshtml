@model IEnumerable<SmarkHealthKidoPack.ViewModel.selectedfoodviewmodel>
@{
    Layout = "~/Views/Shared/AdminLayOut.cshtml";
}



<div class="container">
    @*<h1>please  select your food Aziz</h1>*@


 







   

    <div class="card card-login mx-auto mt-5">
        <div class="card-header"><a class="btn btn-success" style="width:50%" asp-controller="Food" asp-action="CreateFood">Create an Food </a></div>
        @if (ViewBag.cart != null)
        {
            <div class="content">
                <div class="animated">
                    <div class="card">
                        <div class="card-header">
                            <i class="mr-2 fa fa-align-justify"></i>
                            <strong class="card-title" v-if="headerText">Modals</strong>
                        </div>
                        <div class="card-body">
                            <!-- Button trigger modal -->
                            
                            <button type="button" class="btn btn-success mb-1" data-toggle="modal" data-target="#largeModal">
                                Selected food
                            </button>
                           
                        </div>
                    </div>

                  
                    <div class="modal fade" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="largeModalLabel">Large Modal</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>
                                        <table cellpadding="2" cellspacing="2" border="1">
                                            <tr>
                                                <th>Option</th>
                                                <th>Id</th>
                                                <th>Name</th>
                                                <th>Photo</th>
                                                <th>Price</th>
                                                <th>Quantity</th>
                                                <th>Sub Total</th>
                                            </tr>
                                            @foreach (var item in ViewBag.cart)
                                            {
                                                <tr>
                                                    <td><a asp-action="Remove" asp-route-id="@item.food.FoodId">Remove</a></td>
                                                    <td>@item.food.FoodId</td>
                                                    <td>@item.food.FoodName</td>

                                                    <td> <img src="~/images/09399758-c7d7-45d6-95c9-455cff68b2d1_choclate shake.jpg" style="border-radius:.60rem;" width="193" height="130" /> </td>
                                                    <td>@item.food.Price</td>
                                                    <td>@item.quantity</td>
                                                    <td>@(item.food.Price * item.quantity)</td>
                                                </tr>
                                            }
                                            <tr>
                                                <td align="right" colspan="6">Sum</td>
                                                <td>
                                                    @ViewBag.total
                                                </td>
                                            </tr>
                                        </table>
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <a asp-action="Save">add</a>
                                    @*<button name="Buttons" value="register" asp-action="Save" class="btn btn-primary">Confirmssss</button>*@
                                    @*<button type="button" class="btn btn-primary">Confirm</button>*@
                                </div>
                            </div>
                        </div>
                    </div>


                   

                </div>
            </div>

        }

        <div class="card-body">


            @foreach (var item in Model)
            {

                var photoPath = "~/Images/" + (item.foodlist.photopath ?? "noimage.jpg");

                <div class="card rounded-circle" style="width: 20rem; height:27rem; text-align:center;display:inline-block;">


                    <div class="card-block text-center ">
                        <h3 class="card-title bg-warning">@item.foodlist.FoodName</h3>
                        <img class="card-img-top " title="Click to View Product detail"
                             style="cursor:pointer;height:200px;width:100%"
                             src="@photoPath" asp-append-version="true" style="border-radius:.60rem;" />
                        <h2 class="card-title">@item.foodlist.FoodName</h2>
                        <p class="card-text">Calories: @item.foodlist.foodCalories</p>
                        <a asp-action="AddToCart" asp-route-id="@item.foodlist.FoodId">add</a>
                        @*<a class="ti-pencil-alt" asp-action="EditView" asp-route-id="@item.FoodId"></a> |
                        <a class="ti-layout-grid4" asp-action="Details" asp-route-id="@item.FoodId"></a> |
                        <a class="ti-close" asp-action="Delete" asp-route-id="@item.FoodId"></a>*@
                    </div>

                </div>
            }



        </div>
    </div>

</div>

