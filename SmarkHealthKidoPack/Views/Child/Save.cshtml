
@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/AdminLayOut.cshtml";
}



@if (ViewBag.cart != null)
{


    <div class="modal-body">
        <p>
            <table cellpadding="2" cellspacing="2" border="1">
                <tr>

                    @*<th>Id</th>*@
                    <th>Name</th>
                    @*<th>Photo</th>*@
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Sub Total</th>


                </tr>
                @foreach (var item in ViewBag.cart)
                {
                    <tr>

                        <td>@item.food.FoodName</td>


                        <td>@item.food.Price</td>
                        <td>@item.quantity</td>
                        <td>@(item.food.Price * item.quantity)</td>




                    </tr>
                }
                <tr>
                    <td align="right" colspan="6">Sum</td>
                    <td>
                        @ViewBag.total
                    </td>
                </tr>
            </table>
        </p>
    </div>


    <button type="button" class="btn btn-secondary" data-dismiss="modal"> <a  asp-action="LogInmanual"> Back to LogIn</a></button>
